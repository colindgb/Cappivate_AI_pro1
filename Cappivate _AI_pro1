name: Deploy Cappivate AI

on:
  push:

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout Repository
        uses: actions/checkout@v4

      - name: Set up Node.js
        uses: actions/setup-node@v4
        with:
          node-version: "18"

      - name: Install Dependencies
        run: |
          cd backend
          npm install

      - name: Deploy Backend to AWS
        env:
          PRIVATE_KEY: ${{ secrets.AWS_PRIVATE_KEY }}
          HOST: ${{ secrets.AWS_HOST }}
        run: |
          echo "$PRIVATE_KEY" > private_key.pem
          chmod 600 private_key.pem
          scp -o StrictHostKeyChecking=no -i private_key.pem -r backend ubuntu@$HOST:~/backend
          ssh -o StrictHostKeyChecking=no -i private_key.pem ubuntu@$HOST '
            cd ~/backend &&
            npm install &&
            pm2 restart server || pm2 start server.js --name cappivate-ai
          '
